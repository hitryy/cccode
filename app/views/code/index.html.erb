<%= javascript_include_tag 'code.js' %>
<div class="main">
  <div>
    <h1 align="center">Code:</h1>
    <% if flash[:error] %>
        <p>
          <%= flash[:error] %>
        </p>
    <% end %>
    <div id="code_area" class="row">
      <%= form_tag(root_path, method: 'post') do %>
          <div id="code_area_editor" class="left col s9">
            <%= text_area_tag 'code_editor', @code%>
          </div>
          <div class="col s3">
            <div id="code_area_language" class="right">
              <select id="language" name="language" class="similar_width_code_area browser-default", onclick="change_language(this)">
                <option disabled selected value> -- select a language -- </option>
                <%= options_for_select ['C++', 'C', 'C++ (Windows)'] %>
              </select>
            </div>
            <div id="code_area_submit" class="right">
              <%= button_tag 'Run', class: 'similar_width_code_area waves-effect waves-light btn teal', style: "" %>
            </div>
            <div id="code_area_log" class="right input-field">
              <%= text_area_tag 'log', @log, class: 'similar_width_code_area materialize-textarea', placeholder: '...your log here', readonly: true, rows: 12 %>
            </div>
          </div>
      <% end %>
    </div>
  </div>
</div>